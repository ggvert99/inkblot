---
interface Props {
  name: string;
  size?: number;
  class?: string;
  strokeWidth?: number;
}

const base = import.meta.env.BASE_URL;

const { 
  name, 
  size = 24, 
  class: className = '',
  strokeWidth
} = Astro.props;
---

<svg 
  width={size} 
  height={size} 
  class:list={['icon', className]}
  aria-hidden="true"
  stroke-width={strokeWidth}
>
  <use href={`${base}/icons.svg#icon-${name}`} />
</svg>
