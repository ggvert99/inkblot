---
interface Props {
  title: string;
  subtitle?: string;
  tag?: string;
  class?: string;
}

const { title, subtitle, tag, class: className = '' } = Astro.props;
---

<div class:list={['section-header', className]}>
  {tag && <span class="section-tag">{tag}</span>}
  <h2 class="section-title">{title}</h2>
  {subtitle && <p class="section-subtitle">{subtitle}</p>}
</div>
