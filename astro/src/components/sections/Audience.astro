---
import SectionHeader from '@components/common/SectionHeader.astro';
import AudienceCard from '@components/cards/AudienceCard.astro';

const readerData = {
  title: 'For Readers',
  lead: 'Romance readers in the UK who want to discover their next obsession before everyone else does.',
  items: [
    "You're always looking for your next book boyfriend (or girlfriend, or situationship...)",
    'You live for BookTok/Bookstagram recs',
    'You want to support indie authors while getting gorgeous treats',
    'You crave a community that gets your reading chaos'
  ],
  promise: '"Discover a gem, fall hard, talk about it with people who get it."',
  buttonText: 'Join the Crew',
  buttonHref: '#join',
  variant: 'readers' as const
};

const publisherData = {
  title: 'For Publishers & Authors',
  lead: 'Get your books into the hands of engaged, passionate romance readers who love sharing discoveries.',
  items: [
    'Guaranteed placement & feature in our quarterly boxes',
    'Influencer seeding to active BookTok/Bookstagram creators',
    'Post-campaign insights & engagement metrics',
    'Long-tail discoverability with dedicated community'
  ],
  promise: "Visibility, sales, reviews, and readers who'll champion your books.",
  buttonText: 'Discuss a Partnership',
  buttonHref: '#join',
  buttonVariant: 'secondary' as const,
  variant: 'publishers' as const
};
---

<section class="section section-audience" id="community">
  <div class="container">
    <SectionHeader title="who it's for" />
    
    <div class="audience-grid">
      <AudienceCard {...readerData} />
      <div id="publishers">
        <AudienceCard {...publisherData} />
      </div>
    </div>
  </div>
</section>
