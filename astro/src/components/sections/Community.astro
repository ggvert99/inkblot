---
import SectionHeader from '@components/common/SectionHeader.astro';
import Button from '@components/common/Button.astro';
import Icon from '@components/common/Icon.astro';

const discordUrl = 'https://discord.com/channels/1442556988163751970/1442559941918326939';

const communityFeatures = [
  {
    icon: 'book',
    title: 'Book Discussions',
    description: 'Monthly book club sessions, spoiler channels, and spaces to dissect every plot twist together.'
  },
  {
    icon: 'heart',
    title: 'Reader Connection',
    description: 'Find your people — fellow romance enthusiasts who share your reading chaos and get it.'
  }
];
---

<section class="section section-community" id="community">
  <div class="container">
    <SectionHeader 
      title="join the community"
      subtitle="More than a box — it's a space where bookish souls connect"
    />
    
    <div class="community-grid">
      <!-- Main Discord Card -->
      <div class="community-main">
        <div class="community-main-content">
          <div class="community-discord-icon">
            <Icon name="discord" size={32} />
          </div>
          <h3>Our Discord is where the magic happens</h3>
          <p>Join hundreds of romance readers discussing their latest obsessions, sharing recommendations, and ugly-crying over book endings together.</p>
          <div class="community-cta">
            <Button href={discordUrl} variant="primary" size="lg" icon="arrow-right">
              Join Our Discord
            </Button>
            <span class="community-note">Free to join — subscribers & curious readers welcome</span>
          </div>
        </div>
        <div class="community-main-visual">
          <div class="community-orb community-orb-1"></div>
          <div class="community-orb community-orb-2"></div>
        </div>
      </div>
      
      <!-- Feature Cards -->
      <div class="community-features">
        {communityFeatures.map((feature, index) => (
          <div class={`community-feature community-feature-${index + 1}`}>
            <div class="community-feature-icon">
              <Icon name={feature.icon} size={24} />
            </div>
            <div class="community-feature-text">
              <h4>{feature.title}</h4>
              <p>{feature.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .section-community {
    position: relative;
    overflow: hidden;
  }
  
  .section-community::before {
    content: '';
    position: absolute;
    top: 20%;
    right: -10%;
    width: 40%;
    height: 60%;
    background: var(--color-bittersweet);
    border-radius: 50%;
    filter: blur(150px);
    opacity: 0.08;
    pointer-events: none;
  }
  
  .community-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-6);
  }
  
  @media (min-width: 1024px) {
    .community-grid {
      grid-template-columns: 1.2fr 1fr;
      gap: var(--space-8);
      align-items: stretch;
    }
  }
  
  /* Main Discord Card */
  .community-main {
    background: linear-gradient(135deg, #5865F2 0%, #4752C4 100%);
    color: var(--color-cream);
    border-radius: var(--radius-2xl);
    padding: var(--space-8);
    position: relative;
    overflow: hidden;
  }
  
  @media (min-width: 768px) {
    .community-main {
      padding: var(--space-10);
    }
  }
  
  .community-main-content {
    position: relative;
    z-index: 2;
  }
  
  .community-discord-icon {
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.15);
    border-radius: var(--radius-lg);
    margin-bottom: var(--space-5);
  }
  
  .community-main h3 {
    font-size: var(--text-2xl);
    font-weight: 600;
    margin-bottom: var(--space-4);
    line-height: 1.3;
  }
  
  @media (min-width: 768px) {
    .community-main h3 {
      font-size: var(--text-3xl);
    }
  }
  
  .community-main p {
    font-size: var(--text-lg);
    color: rgba(255, 255, 255, 0.85);
    line-height: 1.7;
    margin-bottom: var(--space-8);
    max-width: 480px;
  }
  
  .community-cta {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    align-items: flex-start;
  }
  
  .community-cta :global(.btn) {
    background: white;
    border-color: white;
    color: #5865F2;
  }
  
  .community-cta :global(.btn:hover) {
    background: rgba(255, 255, 255, 0.9);
    border-color: rgba(255, 255, 255, 0.9);
  }
  
  .community-note {
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.7);
  }
  
  /* Visual orbs */
  .community-main-visual {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
  }
  
  .community-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(60px);
  }
  
  .community-orb-1 {
    width: 300px;
    height: 300px;
    background: #7289DA;
    opacity: 0.4;
    top: -100px;
    right: -50px;
  }
  
  .community-orb-2 {
    width: 200px;
    height: 200px;
    background: #99AAB5;
    opacity: 0.2;
    bottom: -50px;
    left: 20%;
  }
  
  /* Feature Cards Container */
  .community-features {
    display: flex;
    flex-direction: column;
    gap: var(--space-5);
  }
  
  /* Feature Cards */
  .community-feature {
    background: var(--color-cream);
    border-radius: var(--radius-2xl);
    padding: var(--space-6);
    border: 1px solid rgba(69, 21, 27, 0.06);
    transition: all 0.4s var(--ease-out);
    display: flex;
    gap: var(--space-4);
    align-items: flex-start;
    flex: 1;
  }
  
  @media (min-width: 768px) {
    .community-feature {
      padding: var(--space-8);
    }
  }
  
  .community-feature:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(69, 21, 27, 0.1);
    border-color: rgba(69, 21, 27, 0.1);
  }
  
  .community-feature-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-lg);
    flex-shrink: 0;
    transition: transform 0.3s var(--ease-out);
  }
  
  .community-feature:hover .community-feature-icon {
    transform: scale(1.1);
  }
  
  .community-feature-1 .community-feature-icon {
    background: var(--color-sweet);
    color: var(--color-chocolate);
  }
  
  .community-feature-2 .community-feature-icon {
    background: var(--color-bittersweet);
    color: var(--color-chocolate);
  }
  
  .community-feature-text h4 {
    font-size: var(--text-lg);
    font-weight: 700;
    margin-bottom: var(--space-2);
    color: var(--color-text-primary);
  }
  
  .community-feature-text p {
    font-size: var(--text-base);
    color: var(--color-text-secondary);
    line-height: 1.6;
  }
  
  /* Reveal animation */
  .community-feature:global(.reveal) {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s var(--ease-out), transform 0.6s var(--ease-out);
  }
  
  .community-feature:global(.reveal.visible) {
    opacity: 1;
    transform: translateY(0);
  }
  
  .community-feature-2:global(.reveal) {
    transition-delay: 0.1s;
  }
</style>
