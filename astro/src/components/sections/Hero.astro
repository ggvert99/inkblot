---
import Button from '@components/common/Button.astro';

const base = import.meta.env.BASE_URL;
---

<section class="hero-video">
  <div class="hero-video-bg">
    <video autoplay muted loop playsinline>
      <source src={`${base}/images/text-to-video-9bd23aae.mp4`} type="video/mp4" />
    </video>
    <div class="hero-video-overlay"></div>
  </div>
  
  <div class="hero-video-content">
    <span class="hero-video-badge">Sneak Peek</span>
    <h1 class="hero-video-title">experience the unboxing magic</h1>
    <p class="hero-video-subtitle">Every box tells a story. Every story finds its reader.</p>
    <Button href="#join" variant="primary" size="lg" icon="arrow-right">
      Get Early Access
    </Button>
  </div>
</section>
