---
import Icon from '@components/common/Icon.astro';

const base = import.meta.env.BASE_URL;

const exploreLinks = [
  { label: 'How it works', href: `${base}/#how-it-works` },
  { label: "What's inside", href: `${base}/#whats-inside` },
  { label: 'FAQ', href: `${base}/#faq` },
];

const socialLinks = [
  { name: 'instagram', href: 'https://instagram.com/inkblotcrew', label: 'Instagram' },
  { name: 'tiktok', href: '#', label: 'TikTok' },
  { name: 'discord', href: 'https://discord.com/channels/1442556988163751970/1442559941918326939', label: 'Discord' },
];

const contactLinks = [
  { label: 'inkblotcrew@gmail.com', href: 'mailto:inkblotcrew@gmail.com' },
  { label: 'Partner with us', href: `${base}/publishers` },
];
---

<footer class="footer">
  <div class="container">
    <!-- Top Section: Brand + Links -->
    <div class="footer-top">
      <div class="footer-brand">
        <a href={base} class="footer-logo">
          <img src={`${base}/images/logo.svg`} alt="Inkblot Crew" class="footer-logo-img" />
        </a>
        <p class="footer-tagline">
          Curated quarterly boxes spotlighting indie romance authors 
          and the readers who love discovering them.
        </p>
      </div>
      
      <div class="footer-columns">
        <div class="footer-col">
          <h4>Explore</h4>
          <ul>
            {exploreLinks.map((link) => (
              <li><a href={link.href}>{link.label}</a></li>
            ))}
          </ul>
        </div>
        
        <div class="footer-col">
          <h4>Contact</h4>
          <ul>
            {contactLinks.map((link) => (
              <li><a href={link.href}>{link.label}</a></li>
            ))}
          </ul>
        </div>
        
        <div class="footer-col">
          <h4>Connect</h4>
          <div class="footer-social">
            {socialLinks.map((social) => (
              <a 
                href={social.href} 
                target="_blank" 
                rel="noopener noreferrer" 
                class="social-link" 
                aria-label={social.label}
              >
                <Icon name={social.name} size={18} />
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
    
    <!-- Bottom Section: Legal + Copyright -->
    <div class="footer-bottom">
      <p class="footer-copyright">Â© {new Date().getFullYear()} Inkblot Crew. Made with love for romance readers.</p>
      <div class="footer-legal">
        <a href="#">Privacy Policy</a>
        <a href="#">Terms of Service</a>
      </div>
    </div>
  </div>
</footer>
