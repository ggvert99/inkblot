---
import Button from '@components/common/Button.astro';
import Icon from '@components/common/Icon.astro';

interface Props {
  name: string;
  price: number;
  period: string;
  description: string;
  features: string[];
  featured?: boolean;
  badge?: string;
  buttonText?: string;
  buttonVariant?: 'primary' | 'ghost';
  variant?: 'default' | 'accent' | 'pink';
}

const { 
  name, 
  price, 
  period, 
  description, 
  features, 
  featured = false,
  badge,
  buttonText = 'Join the Crew',
  buttonVariant = 'primary',
  variant = 'default'
} = Astro.props;

const variantClass = `pricing-card-${variant}`;
---

<div class:list={['pricing-card', variantClass, { 'pricing-card-featured': featured }]}>
  {featured && <div class="pricing-card-glow" />}
  {badge && <div class="pricing-badge">{badge}</div>}
  
  <h3 class="pricing-name">{name}</h3>
  
  <div class="pricing-price">
    <span class="price-currency">Â£</span>
    <span class="price-amount">{price}</span>
    <span class="price-period">{period}</span>
  </div>
  
  <p class="pricing-description">{description}</p>
  
  <ul class="pricing-features">
    {features.map((feature) => (
      <li>
        <Icon name="check" size={20} class="check-icon" />
        <span>{feature}</span>
      </li>
    ))}
  </ul>
  
  <Button href="#join" variant={buttonVariant} full>
    {buttonText}
  </Button>
</div>
