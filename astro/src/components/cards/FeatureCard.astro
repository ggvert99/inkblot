---
import Icon from '@components/common/Icon.astro';

interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="feature-card">
  <div class="feature-icon">
    <Icon name={icon} size={32} strokeWidth={1.5} />
  </div>
  <h3>{title}</h3>
  <p>{description}</p>
</div>
